// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id    String   @id  @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  name  String
  password String
  image String  @default("")
  friends String[] @default([])
  active Boolean @default(false)
  friendRequests String[] @default([])
  sentRequests String[] @default([])
  lastVisited String @default("")
  lastMesage String @default("")
  notSeenCount Int @default(0)
  blockedUsers String[] @default([])
}

model News {
  id    String   @id  @default(auto()) @map("_id") @db.ObjectId
  title String
  description String
}


model Messages {
  id String  @id  @default(auto()) @map("_id") @db.ObjectId
  between String[]  @default([])
  messages Json[] @default([])
  notSeen Json
  blocked Boolean @default(false)
  blockedBy Int @default(0)
}

model Files {
  id String  @id  @default(auto()) @map("_id") @db.ObjectId
  name String
  data String
  contentType String
  originalName String
}

model AudioFiles {
  id String  @id  @default(auto()) @map("_id") @db.ObjectId
  data String
}