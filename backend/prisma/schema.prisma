// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id    String   @id  @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  name  String
  password String
  image String  @default("")
  friends String[] @default([])
  active Boolean @default(false)
  friendRequests String[] @default([])
  sentRequests String[] @default([])
  lastVisited String @default("")
  lastMesage String @default("")
  notSeenCount Int @default(0)
}

model News {
  id    String   @id  @default(auto()) @map("_id") @db.ObjectId
  title String
  description String
}

model NotSeen {
  id    String   @id  @default(auto()) @map("_id") @db.ObjectId
  count Int @default(0)
  by Int @default(0)
  for Messages? @relation(fields: [id], references: [id])
}

model Messages {
  id    String   @id  @default(auto()) @map("_id") @db.ObjectId
  between String[]  @default([])
  sequence Int[] @default([])
  messages String[] @default([])
  lastDate String @default("")
  notSeen NotSeen?
}
